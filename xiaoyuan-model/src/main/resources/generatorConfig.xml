		<!--配置数据库连接地址、用户名、密码-->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://rm-wz942s30t361ycw1ufo.mysql.rds.aliyuncs.com"
                        userId="xiaoyuan123"
                        password="xiaoyuan">
        </jdbcConnection>

        <!-- 对于生成的pojo所在包 -->
        <javaModelGenerator targetPackage="com.0iaoyuan.model" targetProject="src/main/java"/>

