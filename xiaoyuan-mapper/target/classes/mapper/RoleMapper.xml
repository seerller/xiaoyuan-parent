<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xiaoyuan.mapper.RoleMapper" >
	<resultMap id="BaseResultMap" type="com.xiaoyuan.model.role.Role" >
		<id column="id" property="id"/>
		<result column="key_name" property="keyName"/>
		<result column="describe" property="describe"/>
		<result column="title" property="title"/>
		<result column="user_cate" property="user_cate"/>
	</resultMap>
	<resultMap id="RoleDtoResultMap" extends="BaseResultMap" type="com.xiaoyuan.model.dto.RoleDto">
		<result property="pIds" column="ids"/>
 	</resultMap>

	<insert id="insertService" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO tl_role
		<trim prefix="(" suffix=")" suffixOverrides=",">
		<if test="keyName != null">
			key_name,
		</if>
		<if test="describe != null">
			describe,
		</if>
		<if test="title != null">
			title,
		</if>
			<if test="user_cate != null">
				user_cate,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="keyName != null">
				#{keyName},
			</if>
			<if test="describe != null">
				#{describe},
			</if>
			<if test="title != null">
				#{title},
			</if>
			<if test="user_cate != null">
				#{user_cate},
			</if>

		</trim>
	</insert>
	<insert id="insertRolePermission">
		INSERT INTO tl_role_permission(p_id,r_id) values
		<foreach  collection="ids" item="listItem"  separator=",">
			<trim prefix=" (" suffix=")" suffixOverrides=",">
				#{listItem},#{id}
			</trim>
		</foreach>
	</insert>

	<update id="updateService">
		update tl_role
		<set>
			<if test="keyName != null">
				key_name = #{keyName},
			</if>
			<if test="title != null">
				title=   #{title},
			</if>
			<if test="user_cate != null">
				user_cate=   #{user_cate},
			</if>
		</set>
		WHERE id = #{id}
	</update>

	<delete id="deleteById">
		delete from tl_role where id=#{id}
	</delete>
	<delete id="reomvePermission">
		delete from tl_role_permission WHERE r_id = #{roleId};
	</delete>
	<select id="selectBySearch" resultMap="RoleDtoResultMap">
		SELECT ROLE.*,IFNULL(GROUP_CONCAT(p_id),'') as ids
		FROM tl_role AS ROLE
		LEFT JOIN tl_role_permission as PERMISSION ON ROLE.id = PERMISSION.r_id
		WHERE 1 = 1
		<if test="roleId != null ">
		AND id  = #{roleId}
		</if>
		group by ROLE.id
	</select>
</mapper>