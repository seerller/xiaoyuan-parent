<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xiaoyuan.mapper.ErpRegionMapper">
	<select id="lists" resultType="com.xiaoyuan.model.ErpRegion">
		SELECT * from tl_erp_region
		<where>
			<if test="parent_id != null">
				parent_id= #{parent_id}
			</if>
			<if test="region_type != null and region_type != ''">
				and region_type= #{region_type}
			</if>
			<if test="pinyin != null and pinyin != ''">
				and pinyin= #{pinyin}
			</if>
		</where>
	</select>

	<!-- <select id="get_address" resultType="com.yuanqu.model.ErpRegion"> SELECT 
		* from tl_erp_region </select> -->

	<!-- 前端传参地区数字，返回地区字符串，修改上面这个，，， -->
	<select id="get_address" resultType="com.xiaoyuan.model.ErpRegion">
		SELECT
		*
		FROM
		tl_erp_region
		WHERE 1 = 1
		<if test="id!=null">
			AND id = #{id}
		</if>
	</select>
    <select id="selectBySearch" resultType="com.xiaoyuan.model.ErpRegion">
		SELECT * FROM tl_erp_region AS REGION
		WHERE 1=1
		<if test="parentId!=null">
			AND	REGION.parent_id = #{parentId}
		</if>
	</select>
</mapper>