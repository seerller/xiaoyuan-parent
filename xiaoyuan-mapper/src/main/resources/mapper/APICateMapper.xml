<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xiaoyuan.mapper.APICateMapper">

    <!--20190328-->
    <select id="first_api" resultType="com.xiaoyuan.model.APICate">
SELECT
	*
FROM
	tl_api_cate
WHERE
	listsorder = 1
ORDER BY
	id
	</select>

    <select id="lists" resultType="com.xiaoyuan.model.APICate"
            parameterType="java.lang.String">
        SELECT
        id,
        title,
        c
        FROM
        tl_api_cate
        WHERE c LIKE '%Erp%'
        AND (
        (id != 199
        AND id != 200
        AND id != 207)
        OR id = 87
        )
        <if test="condition != null and condition !=''">
            <![CDATA[${condition}]]>
        </if>
    </select>
</mapper>